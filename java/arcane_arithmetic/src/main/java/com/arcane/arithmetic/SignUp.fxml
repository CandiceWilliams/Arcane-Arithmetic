<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arcane.arithmetic.SignUpController">
   <top>
      <AnchorPane prefHeight="396.0" prefWidth="725.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="signUpLabel" layoutX="7.0" layoutY="6.0" prefHeight="49.0" prefWidth="711.0" text="  Create a new account">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField layoutX="284.0" layoutY="91.0" prefHeight="26.0" prefWidth="405.0" promptText="enter new username" />
            <Button fx:id="signUpButton" layoutX="284.0" layoutY="321.0" mnemonicParsing="false" onAction="#signUpButtonClick" prefHeight="42.0" prefWidth="307.0" text="Let's Do This!">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label fx:id="passwordConfirmationLabel" layoutX="41.0" layoutY="241.0" prefHeight="35.0" prefWidth="237.0" text="Confirm Password:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="passwordLabel" layoutX="41.0" layoutY="162.0" prefHeight="35.0" prefWidth="232.0" text="Password:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" layoutX="41.0" layoutY="87.0" prefHeight="35.0" prefWidth="234.0" text="Username:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="backToSignInScreenButton" layoutX="37.0" layoutY="321.0" mnemonicParsing="false" onAction="#switchToSignInScene" prefHeight="42.0" prefWidth="210.0" text="Back to Sign in Screen">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <TextField layoutX="284.0" layoutY="166.0" prefHeight="26.0" prefWidth="405.0" promptText="enter new password" />
            <TextField layoutX="284.0" layoutY="245.0" prefHeight="26.0" prefWidth="405.0" promptText="re-enter password" />
         </children>
      </AnchorPane>
   </top>
</BorderPane>
